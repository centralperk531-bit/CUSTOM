        <!-- Lista de caracterÃ­sticas -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFeatures"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTrialInfo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Funciones Premium:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvFeaturesList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ… Cambios ilimitados de custodia\n\nâœ… ExportaciÃ³n PDF sin lÃ­mites\n\nâœ… MÃºltiples custodias (varios hijos)\n\nâœ… Backup automÃ¡tico en nube\n\nâœ… Sin anuncios"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Precio -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Solo 4,99â‚¬ - Pago Ãºnico"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardFeatures" />

        <!-- BotÃ³n comprar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBuyPremium"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:text="Desbloquear Premium"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPrice" />

        <!-- BotÃ³n restaurar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRestorePurchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Restaurar compra"
            style="@style/Widget.Material3.Button.TextButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBuyPremium" />

        <!-- BOTONES DE TESTING (solo visible en Debug) -->
        <TextView
            android:id="@+id/tvTestingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="ðŸ”§ Controles de Testing"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnRestorePurchase" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSimulate30Days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Simular 30 dÃ­as"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTestingLabel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResetTrial"
            android:layout_width="0dp"
