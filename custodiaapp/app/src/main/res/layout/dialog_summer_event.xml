<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- NUEVO: Leyenda informativa (oculta por defecto) -->
    <TextView
        android:id="@+id/tvYearRuleLegend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E3F2FD"
        android:padding="12dp"
        android:textSize="13sp"
        android:textColor="#1565C0"
        android:lineSpacingExtra="4dp"
        android:visibility="gone"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de inicio"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edtSummerStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="dd/MM/yyyy"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de fin"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edtSummerEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="dd/MM/yyyy"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edtSummerDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ej: Campamento de verano"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asignado a"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerSummerParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>