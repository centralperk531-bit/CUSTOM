<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    tools:context=".MainActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white"/>

    <!-- TabLayout con diseÃ±o moderno -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:tabTextColor="#B3FFFFFF"
        app:tabSelectedTextColor="@android:color/white"
        app:tabIndicatorColor="@android:color/white"
        app:tabIndicatorHeight="3dp"
        app:tabMode="fixed"
        app:tabGravity="fill"/>

    <!-- TabHost (versiÃ³n antigua pero funcional) -->
    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- TAB 1: CALENDARIO -->
                <LinearLayout
                    android:id="@+id/tabCalendar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/calendarViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                </LinearLayout>

                <!-- TAB 2: CONSULTAR -->
                <ScrollView
                    android:id="@+id/tabSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_search_date"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/colorPrimary"
                                    android:layout_marginBottom="12dp"/>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Selecciona una fecha"
                                    app:boxBackgroundMode="outline"
                                    app:boxCornerRadiusTopStart="8dp"
                                    app:boxCornerRadiusTopEnd="8dp"
                                    app:boxCornerRadiusBottomStart="8dp"
                                    app:boxCornerRadiusBottomEnd="8dp"
                                    app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
                                    android:layout_marginBottom="16dp">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edtSearchDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:focusable="false"
                                        android:clickable="true"
                                        android:cursorVisible="false"
                                        android:hint="dd/MM/yyyy"
                                        android:maxLines="1"/>
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnSearch"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:text="@string/btn_search"
                                    android:textSize="16sp"
                                    app:cornerRadius="8dp"
                                    app:icon="@android:drawable/ic_menu_search"
                                    android:contentDescription="@string/cd_search_button"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="12dp"
                            app:cardBackgroundColor="#E3F2FD">

                            <TextView
                                android:id="@+id/tvResult"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:padding="16dp"
                                android:minHeight="100dp"
                                android:textColor="#1565C0"
                                android:text=""/>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </ScrollView>

                <!-- TAB 3: ESTADÃSTICAS -->
                <ScrollView
                    android:id="@+id/tabStats"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="12dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:minHeight="200dp">

                                <ProgressBar
                                    android:id="@+id/progressBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:visibility="gone"/>

                                <TextView
                                    android:id="@+id/tvStats"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:textSize="14sp"
                                    android:textColor="#212121"
                                    android:text="Cargando estadÃ­sticas..."/>
                            </RelativeLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </ScrollView>

                <!-- TAB 4: CONFIGURACIÃ“N -->
                <ScrollView
                    android:id="@+id/tabConfig"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Card Nombres -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ‘¥ Nombres"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/colorPrimary"
                                    android:layout_marginBottom="12dp"/>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/label_parent1"
                                    app:boxBackgroundMode="outline"
                                    app:boxCornerRadiusTopStart="8dp"
                                    app:boxCornerRadiusTopEnd="8dp"
                                    app:boxCornerRadiusBottomStart="8dp"
                                    app:boxCornerRadiusBottomEnd="8dp"
                                    android:layout_marginBottom="12dp">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edtParent1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textPersonName"
                                        android:maxLines="1"/>
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/label_parent2"
                                    app:boxBackgroundMode="outline"
                                    app:boxCornerRadiusTopStart="8dp"
                                    app:boxCornerRadiusTopEnd="8dp"
                                    app:boxCornerRadiusBottomStart="8dp"
                                    app:boxCornerRadiusBottomEnd="8dp">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edtParent2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textPersonName"
                                        android:maxLines="1"/>
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Card AÃ±os Pares/Impares -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ“… AÃ±os Pares/Impares"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/colorPrimary"
                                    android:layout_marginBottom="12dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="QuiÃ©n empieza en aÃ±os PARES:"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp"/>

                                <Spinner
                                    android:id="@+id/spinnerEvenYearStarts"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@android:drawable/btn_dropdown"
                                    android:padding="12dp"
                                    android:layout_marginBottom="16dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="QuiÃ©n empieza en aÃ±os IMPARES:"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp"/>

                                <Spinner
                                    android:id="@+id/spinnerOddYearStarts"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@android:drawable/btn_dropdown"
                                    android:padding="12dp"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Card Patrones -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="âš™ï¸ ConfiguraciÃ³n de Custodia"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/colorPrimary"
                                    android:layout_marginBottom="12dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Fecha de inicio del patrÃ³n"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp"/>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Fecha de inicio"
                                    app:boxBackgroundMode="outline"
                                    app:boxCornerRadiusTopStart="8dp"
                                    app:boxCornerRadiusTopEnd="8dp"
                                    app:boxCornerRadiusBottomStart="8dp"
                                    app:boxCornerRadiusBottomEnd="8dp"
                                    app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
                                    android:layout_marginBottom="16dp">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edtStartDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:focusable="false"
                                        android:clickable="true"
                                        android:cursorVisible="false"
                                        android:hint="dd/MM/yyyy"
                                        android:maxLines="1"/>
                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_custody_pattern"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp"/>

                                <Spinner
                                    android:id="@+id/spinnerPattern"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@android:drawable/btn_dropdown"
                                    android:padding="12dp"
                                    android:layout_marginBottom="16dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_change_day"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp"/>

                                <Spinner
                                    android:id="@+id/spinnerDay"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@android:drawable/btn_dropdown"
                                    android:padding="12dp"
                                    android:layout_marginBottom="16dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_summer_division"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp"/>

                                <Spinner
                                    android:id="@+id/spinnerSummerDiv"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@android:drawable/btn_dropdown"
                                    android:padding="12dp"
                                    android:layout_marginBottom="16dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="QuiÃ©n empieza el VERANO:"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp"/>

                                <Spinner
                                    android:id="@+id/spinnerSummerFirst"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@android:drawable/btn_dropdown"
                                    android:padding="12dp"
                                    android:layout_marginBottom="16dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Regla de aÃ±os para VERANO:"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp"/>

                                <Spinner
                                    android:id="@+id/spinnerSummerYearRule"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@android:drawable/btn_dropdown"
                                    android:padding="12dp"
                                    android:layout_marginBottom="16dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_christmas_division"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp"/>

                                <Spinner
                                    android:id="@+id/spinnerChristmasDiv"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@android:drawable/btn_dropdown"
                                    android:padding="12dp"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Card Eventos y PerÃ­odos (SIN botÃ³n de eventos de verano) -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ“ Eventos Especiales"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/colorPrimary"
                                    android:layout_marginBottom="12dp"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnManageSpecialDates"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Gestionar Fechas Especiales"
                                    app:cornerRadius="8dp"
                                    style="@style/Widget.Material3.Button.OutlinedButton"
                                    android:layout_marginBottom="8dp"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnManageNoCustody"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Gestionar PerÃ­odos Especiales"
                                    app:cornerRadius="8dp"
                                    style="@style/Widget.Material3.Button.OutlinedButton"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- BotÃ³n guardar -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveConfig"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@string/btn_save"
                            android:textSize="16sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_menu_save"/>
                    </LinearLayout>
                </ScrollView>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>